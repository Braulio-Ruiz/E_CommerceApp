    </style>

    <!-- Base application theme -->
    <style name="Theme.ECommerceApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales de la aplicación -->
        <item name="colorPrimary">@color/primary</item> <!-- Color principal -->
        <item name="colorPrimaryVariant">@color/primary_variant</item> <!-- Variante más oscura del
        color principal -->
        <item name="colorSecondary">@color/secondary</item> <!-- Color secundario -->
        <item name="colorSecondaryVariant">@color/secondary_variant</item> <!-- Variante del color
        secundario -->
        <item name="colorSurface">@color/surface</item> <!-- Color para superficies, como tarjetas -->
        <item name="colorError">@color/error</item> <!-- Color para errores -->

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/on_background</item> <!-- Texto principal (por
        ejemplo, títulos) -->
        <item name="android:textColorSecondary">@color/on_surface</item> <!-- Texto secundario (por
        ejemplo, descripciones) -->

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">@color/primary_variant</item> <!-- Barra de estado,
        generalmente color oscuro -->

        <!-- Personalización adicional del tema claro -->
        <item name="android:windowBackground">@color/background</item> <!-- Color de fondo de la
        ventana -->
        <!-- Comentado por si usas material buttons -->
        <!-- <item name="colorButtonNormal">@color/primary</item> -->
    </style>
</resources>